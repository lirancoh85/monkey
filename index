    <script>
        // REPLACE THIS WITH YOUR GOOGLE APPS SCRIPT WEB APP URL
        const SCRIPT_URL = 'https://script.google.com/macros/s/AKfycbyRQyYa0z8nCGPkHtf0A9nlDbA0i6k4VVhveKNwukU6_9-FbHl8Ebs_kfFFHr6ynEa6/exec';

        async function trackVisitor() {
            try {
                // Get visitor's IP and location data
                const response = await fetch('https://ipapi.co/json/');
                const data = await response.json();
                
                // Prepare visitor info
                const visitorInfo = {
                    country: data.country_name || 'Unknown',
                    countryCode: data.country_code || 'Unknown',
                    city: data.city || 'Unknown',
                    region: data.region || 'Unknown',
                    ip: data.ip || 'Unknown',
                    timestamp: new Date().toISOString(),
                    userAgent: navigator.userAgent
                };

                console.log('Visitor Location:', visitorInfo);

                // Send to Google Sheets (if URL is configured)
                if (SCRIPT_URL && SCRIPT_URL !== 'YOUR_GOOGLE_SCRIPT_URL_HERE') {
                    await fetch(SCRIPT_URL, {
                        method: 'POST',
                        mode: 'no-cors',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify(visitorInfo)
                    });
                    console.log('Data sent to Google Sheets!');
                }

            } catch (error) {
                console.error('Error tracking visitor:', error);
            }
        }

        // Track visitor when page loads
        trackVisitor();
    </script>
